  <div class="center jumbotron">
    
  
  <h2>Add New Classrooms</h2>
  <br>
      <%= form_for :class , method: :get, url: addclassroom_path do |f| %>
      <p>
        <%= f.label "Building Name:" %>
        <%= f.text_field :building_name %>
      </p>
      <p>
        <%= f.label "Room Number:" %>
        <%= f.text_field :room_name %>
      </p>
       <p>
        <%= f.label "Room Capacity:" %>
        <input type="text" name="class[room_capacity]" id="classroomcapacity"/>&nbsp;<span id="capacityerrmsg"></span>
      </p>
      <p>
         <%= f.submit "Add/Update Classroom",class:"btn btn-primary" %>
      </p>
     
       
       <%= link_to "Back", root_path %>
      <% end %>
  <br>
</div>

  <h2>List of available classrooms</h2> 
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Building Name</th>
        <th>Room Name</th>
        <th>Capacity</th>
      </tr>
    </thead>
    <tbody>
    <% @allRooms.each do |room| %>
    <% @allBuildings.each do |building| %>
    <% if room.building_id == building.id %>
    <tr>
     <td> <%= building.building_name %> </td>
     <td> <%= room.room_name %> </td>
     <td> <%= room.capacity %> </td>
    </tr>
    <% end %>
    <% end %>
    <% end %>
    </tbody>
  </table>

<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Landing Page - Start Bootstrap Theme</title>

  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag 'application' %>

  <%= yield(:head) %>
  <!-- Bootstrap Core CSS -->

  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

      </head>

      <body>

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
          <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              
              <a class="navbar-brand topnav" >Howdy, <%= current_user.faculty_name %></a>
            </div>
            <div class="nav navbar-brand navbar-right">
              <% if current_user %>
                <ul>
                  <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
                </ul>
              <% end %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            </div>
            <!-- /.navbar-collapse -->
          </div>
          <!-- /.container -->
        </nav>


        <!-- Header -->
        
        <div class="intro-header">
          <div class="container">

            <div class="row">
              <div class="col-lg-12">
                <div class="row">
                  <h1>Course Assignment System</h1>
                  <p>
                    <%= form_for :class,  method: :get , url: setsession_path do |f| %>
                    <h3><%= f.label "Choose Semester" %></h3>
                    <%= f.select :semester_id , options_for_select(@semester.collect { |semester| [semester.semester_title, semester.id] },session[:semester_id] ), {prompt: "Please Select", hide_label: :true }, { :onchange => "this.form.submit()", id: 'sessionId' , class: "btn btn-default dropdown-toggle"} %>
                  <% end %>  
                  </p>
          
                  <h3>Manage Faculty Info</h3>
                  
                  <hr class="intro-divider">
                  <ul class="list-inline intro-social-buttons">
                    
                  <p>
                   <li><%= link_to "Add Faculty", addfaculty_path, class: "btn btn-default btn-lg" %></li>
                   <li><%= link_to "Edit Faculty Info", faculties_path, class: "btn btn-default btn-lg" %></li>
                   <li><%= link_to "Edit Faculty Preference", addpreference_path, class: "btn btn-default btn-lg" %></li>
                   <li><%= link_to "Reset Faculty Account", resetuser_path, class: "btn btn-default btn-lg" %></li>
                 </p>
                 <br>
                 <br>
          
                <h3>Edit Courses & Classrooms</h3>
                <hr class="intro-divider">
                  <ul class="list-inline intro-social-buttons">
                    <p>
                     <li>
                       <%= link_to "Add New Course", addcourse_path, class: "btn btn-default btn-lg" %>
                     </li>
                     <li>
                       <%= link_to "Add New Classroom", addclassroom_path, class: "btn btn-default btn-lg" %>
                     </li>
                    <li>
                      <%= link_to "Add New Semester", addsemester_path, class: "btn btn-default btn-lg" %>
                    </li>
                  </p>
                </p>
                <br>
                <h3>Make Assignments</h3>
                <hr class="intro-divider">
                  <ul class="list-inline intro-social-buttons">
                    <p> 
            <li>
                        <%= link_to "Room Availability", class_index_path, class: "btn btn-default btn-lg" %>
            </li>
            <li>
              <%= link_to "Assign Faculty to Courses", faculty_courses_path, class: "btn btn-default btn-lg" %>
            </li>
            <li>
              <%= link_to "Schedule Course", course_assignments_path, class: "btn btn-default btn-lg" %>
            </li>
                </p>
         <br>
               <br>
        <h3>View</h3>
          <hr class="intro-divider">
            <ul class="list-inline intro-social-buttons">
              <p>
             <li>
                <%= link_to "Preference Summary", pref_summary_index_path, class: "btn btn-default btn-lg" %>
             </li>
             <!-- <li>
               <%= link_to "Conflict Checker", conflict_checker_index_path, class: "btn btn-default btn-lg" %>
             </li> -->
             <li>
               <%= link_to "Calendar", events_path, 'data-no-turbolink' => true, class: "btn btn-default btn-lg" %>
             </li>
             <li>
               <%= link_to "Number of Preference", numberpreference_path, class: "btn btn-default btn-lg" %>
             </li>
          </p>
             <br />
             <hr class="intro-divider">
             <ul class="list-inline intro-social-buttons">
               <li>
                 <%= link_to "Logout", logout_path, method: "delete", class: "btn btn-default btn-lg", id: "logout_link" %>
               </li>
           </ul>
         </div>
       </div>
     </div>

   </div>
   <!-- /.container -->

 </div>

<div class="banner">

  <div class="container">

    <div class="row">
      <div class="col-lg-6">
        <ul class="list-inline banner-social-buttons">
      <div class="col-lg-6">
        <ul class="list-inline banner-social-buttons">
          <li>
          </li>
          <li>
          </li>
          <li>
          </li>
        </ul>
      </div>
    </div>

  </div>

</div>

<!-- Footer -->
<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <p class="copyright text-muted small" style ="text-align:center">Copyright &copy; TAMU 2016. All Rights Reserved</p>
      </div>
    </div>
  </div>
</footer>

<!-- jQuery -->
<script src="../../assets/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="../../assets/bootstrap.min.js"></script>
</body>
</html>